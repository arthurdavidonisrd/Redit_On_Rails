<%= link_to post, class: "block transition-transform duration-300 hover:scale-105" do %>
  <div id="<%= dom_id post %>" class="w-full sm:w-auto my-5 space-y-4 bg-white shadow-md rounded-2xl p-6 border border-gray-200 hover:shadow-xl">
    
    <div>
      <h2 class="text-xl font-semibold text-gray-800 mb-2">
        <%= post.title %>
      </h2>
    </div>
    
    <div>
      <p class="text-gray-600">
        <%= truncate(post.body, length: 120) %>
      </p>
    </div>
    
    <% if post.image.attached? %>
      <div>
        <%= image_tag post.image, class: "w-100 h-64 object-cover rounded-lg border" %>
      </div>
    <% end %>

  </div>
<% end %>
